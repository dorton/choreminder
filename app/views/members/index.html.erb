<h1> Listing Members</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Area code</th>
    <th>Mobile number</th>
    <th>Manager</th>
    <th>Household</th>
  </tr>

  <% for member in @members %>
  <tr>
    <td><%= h member.first_name %></td>
    <td><%= h member.last_name %></td>
    <td><%= h member.email %></td>
    <td><%= h member.area_code %></td>
    <td><%= h member.mobile_number %></td>
    <td><%= h member.manager %></td>
    <td><%= h member.household_id %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to 'New Member', new_member_path %></p>
